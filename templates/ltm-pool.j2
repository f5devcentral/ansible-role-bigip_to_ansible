- name: Create pools
  bigip_pool:
{%- raw %}
    name: "{{ item.name }}"
    monitors: "{{ item.monitors|default(omit) }}"
    provider: "{{ provider }}"
{% endraw %}
  loop:
{% for x in ltm_pools %}
    - name: {{ x['PoolName'] }}
{% if x['Monitor'] != '' %}
      monitors: {{ x['Monitor'] }}
{% endif %}
{% endfor %}
